{
  // Cross-platform safe build task for VS Code on macOS / Linux / Windows
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "if [ -f package.json ]; then npm run build; else echo '✔️ No package.json — nothing to build'; fi"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "clear": true
      },
      "problemMatcher": []
    }
  ]
}
