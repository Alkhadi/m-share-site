<script id="mpl-mobile-nav-patch-v3">
(function(){
  var MQ = window.matchMedia ? window.matchMedia("(max-width: 1024px)") : {matches:true, addEventListener:function(){}};

  function onReady(fn){
    if (document.readyState !== 'loading') fn();
